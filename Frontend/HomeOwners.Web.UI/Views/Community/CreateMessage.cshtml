@model CreateCommunityMessageViewModel;

@{
    ViewData["Title"] = "CreateCommunityMessage";
}


<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h3 class="mb-0"> Send a Community Message</h3>
        </div>
        <div class="card-body p-4">
            <form asp-controller="Community" asp-action="CreateMessage">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" name="CommunityId" value="@Model.CommunityId" />

                <div class="mb-3">
                    <label asp-for="Message" class="form-label fw-bold"></label>
                    <input asp-for="Message" class="form-control shadow-sm" placeholder="Enter reason for meeting" />
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Details", "Community", new { id = Model.CommunityId })" class="btn btn-outline-secondary">
                        Back to Community
                    </a>
                    <button type="submit" class="btn btn-success">
                        Send
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>