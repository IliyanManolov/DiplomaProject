@model List<CommunityCardViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<h2 class="text-center my-5">My Communities</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var community in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">@community.Name</h5>
                    <p class="card-text">
                        <strong>Total Properties:</strong> @community.PropertiesCount
                    </p>
                </div>
                <div class="card-footer bg-white border-0">
                    <a href="@Url.Action("Details", "Community", new { id = community.Id })" class="btn btn-outline-primary">
                        View Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>