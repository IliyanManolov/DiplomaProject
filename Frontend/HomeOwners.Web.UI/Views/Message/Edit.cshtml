@model EditMessageViewModel;

@{
    ViewData["Title"] = "Edit message";
}


<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h3 class="mb-0"> Send a Community Message</h3>
        </div>
        <div class="card-body p-4">
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success">
                    @ViewBag.SuccessMessage
                </div>
            }
            <form asp-controller="Message" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" name="MessageId" value="@Model.MessageId" />
                <input type="hidden" name="CommunityId" value="@Model.CommunityId" />

                <div class="mb-3">
                    <label asp-for="Message" class="form-label fw-bold"></label>
                    <input asp-for="Message" class="form-control shadow-sm" placeholder="Enter message" />
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a class="nav-link rounded bg-light shadow-sm text-dark mt-4" asp-area="" asp-controller="Community" asp-action="Details" asp-route-id="@Model.CommunityId">
                        Back to Community
                    </a>

                    <button type="submit" class="btn btn-success">
                        Edit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>